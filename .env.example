# Alpaca API Credentials
ALPACA_API_KEY=your_api_key_here
ALPACA_SECRET_KEY=your_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets  # Use paper trading URL for testing

# Trading Parameters
TRADING_SYMBOL=SPY
VWAP_PERIOD=20  # Number of bars for VWAP calculation
ENTRY_THRESHOLD=0.001  # 0.1% deviation from VWAP for entry
EXIT_THRESHOLD=0.0005  # 0.05% profit target
STOP_LOSS=0.002  # 0.2% stop loss
POSITION_SIZE=100  # Number of shares per trade
MAX_DAILY_LOSS=500  # Maximum daily loss in dollars
MAX_POSITIONS=3  # Maximum concurrent positions

# Bot Settings
TIMEFRAME=1Min  # Bar timeframe (1Min, 5Min, 15Min)
TRADING_START_TIME=09:30  # Market open time (ET)
TRADING_END_TIME=15:45  # Stop trading 15 mins before close
DRY_RUN=True  # Set to False for live trading
