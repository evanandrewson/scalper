{
  "name": "vwap-scalper-bot",
  "version": "1.0.0",
  "description": "VWAP-based scalping bot integrated with Alpaca trading API",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "clean": "rm -rf dist",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "backtest": "tsx src/backtest.ts run",
    "backtest:fetch": "tsx src/backtest.ts fetch"
  },
  "keywords": [
    "trading",
    "vwap",
    "scalping",
    "alpaca",
    "algorithmic-trading",
    "bot"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@alpacahq/alpaca-trade-api": "^3.0.3",
    "chalk": "^5.3.0",
    "dotenv": "^16.3.1",
    "express": "^5.2.1",
    "winston": "^3.11.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.4.6",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
